extends ../base 

block head 

block content 
    h1 #{product.name} Detail Page 
    hr
    .image 
        img(src=product.img, alt=product.name)
    h2= product.price 
    p= product.description
    .actions 
        form(action="/cart" method="POST")
            button(type="submit") Add to Cart
            input(type="hidden", name="id", value=product.id) 